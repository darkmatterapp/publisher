<%= render "admin/form_errors", thing: post %>

<%= render "admin/form_title_subtitle", f: f %>

<div class="form-group">
  <%= f.label :summary, "Summary" %>
  <%= f.text_area :summary, class: "form-control", rows: 6 %>
</div>
<div class="form-group">
  <%= f.label :url, "URL" %>
  <%= f.url_field :url, class: "form-control" %>
</div>

<fieldset>
  <legend>Dates and Times</legend>
  <%= render "admin/datetime_group", f: f, attr: :starts_at, thing: post %>
  <%= render "admin/datetime_group", f: f, attr: :ends_at,   thing: post %>
</fieldset>

<%= render "admin/form_actions",   f: f, cancel_url: events_url %>

<fieldset>
  <legend>About the Organizer</legend>

  <div class="row">
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :organizer_name, "Name" %>
        <%= f.text_field :organizer_name, class: "form-control" %>
      </div>
    </div>
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :organizer_url, "URL" %>
        <%= f.url_field :organizer_url, class: "form-control" %>
      </div>
    </div>
  </div>
</fieldset>

<fieldset>
  <legend>About the Location</legend>

  <div class="row">
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :location_name, "Name" %>
        <%= f.text_field :location_name, class: "form-control" %>
      </div>
    </div>
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :location_url, "URL" %>
        <%= f.url_field :location_url, class: "form-control" %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :location_street_address, "Street Address" %>
        <%= f.text_field :location_street_address, class: "form-control" %>
      </div>
    </div>
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :location_extended_street_address, "Extended Street Address" %>
        <%= f.text_field :location_extended_street_address, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :location_locality, "Locality" %>
        <%= f.text_field :location_locality, class: "form-control" %>
        <p class="help-block">City, town, village, etc</p>
      </div>
    </div>
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :location_region, "Region" %>
        <%= f.text_field :location_region, class: "form-control" %>
        <p class="help-block">State, province, county, etc</p>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :location_postal_code, "Postal Code / Zipcode" %>
        <%= f.text_field :location_postal_code, class: "form-control" %>
      </div>
    </div>
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :location_country, "Country" %>
        <%= f.text_field :location_country, class: "form-control" %>
      </div>
    </div>
  </div>
</fieldset>

<div class="row">
  <div class="col-xs-4">
    <div class="form-group">
      <%= f.label :location_latitude, "Latitude" %>
      <%= f.text_field :location_latitude, class: "form-control" %>
    </div>
  </div>
  <div class="col-xs-4">
    <div class="form-group">
      <%= f.label :location_longitude, "Longitude" %>
      <%= f.text_field :location_longitude, class: "form-control" %>
    </div>
  </div>
  <div class="col-xs-4">
    <div class="form-group">
      <%= f.label :location_altitude, "Altitude" %>
      <%= f.text_field :location_altitude, class: "form-control" %>
    </div>
  </div>
</div>

<%= render "admin/form_actions",   f: f, cancel_url: events_url %>
<%= render "admin/form_post_meta", f: f, post: post %>
<%= render "admin/form_actions",   f: f, cancel_url: events_url %>
