<h1>Sign In</h1>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %><br>
    <%= email_field_tag :email, params[:email], autofocus: true %>
  </div>
  <div class="field">
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag "Sign In" %>
  </div>
<% end %>
