<% if signed_in? %>
  <div id="admin-button">
    <%= link_to "Admin Dashboard", dashboard_new_path %>
  </div>
<% end %>

<% unless on_page? && @post.hide_header %>
  <header role="banner">
    <%= render "shared/site_owner_photo" if show?(:header_show_avatar) %>

    <h1 class="dm-site-title"><%= link_to setting(:site_title), root_url, rel: "home" if show?(:header_show_site_title) %></h1>
    <div class="dm-site-description"><%= simple_format setting(:site_description) if show?(:header_show_site_description) %></div>
  </header>
<% end %>
